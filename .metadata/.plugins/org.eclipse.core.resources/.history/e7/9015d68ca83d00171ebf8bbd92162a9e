import java.time.LocalDateTime;
import java.time.LocalTime;
import java.time.Period;
import java.util.LinkedList;
import java.util.Map;
import java.util.SortedMap;
import java.util.SortedSet;
import java.util.TreeMap;
import java.util.function.BiConsumer;

public class Turma {
	private LinkedList<Aluno> listaAluno;
	private Motorista motorista;
	private Rota rota;
	private static int idTurma;
	private int cont = 0;

	public LinkedList verificarAlunos() {
		return listaAluno;
	}

	public void verificarRota() {

	}
	
	public String rotaOrdenada(){
		rota.setInicioViagem(LocalTime.now());
		rota.setTurma(this);
		TreeMap<LocalTime, Aluno> a = new TreeMap<LocalTime, Aluno>();
		listaAluno.forEach(x -> {
			a.put(x.getContratoAluno().getRecolhimentoCasa(), x);
		});
		
		String jsonAlunos = "{Alunos : {";
		for (Map.Entry<LocalTime, Aluno> x : a.entrySet()){
			jsonAlunos += "[{\"nome :\" \" " + x.getValue().getNome() + "\"" +
					"[{\"nome :\" \" " + x.getValue().getEndereco().getRua() + "\"" +
					"[{\"nome :\" \" " + x.getValue().getEndereco().getBairro() + "\"" +
					"[{\"nome :\" \" " + x.getValue().getEndereco().getNumero() + "\"" +
					"[{\"nome :\" \" " + x.getValue().getFaculdade().getNome() + "\"" +
					"[{\"nome :\" \" " + x.getValue().getFaculdade().getEndereco().getRua() + "\"" +
					"[{\"nome :\" \" " + x.getValue().getFaculdade().getEndereco().getBairro() + "\"" +
					"[{\"nome :\" \" " + x.getValue().getFaculdade().getEndereco().getNumero() + "\"" +
					"[{\"nome :\" \" " + x.getValue().getFaculdade().getEndereco().getCep() + "\"" +
					"[{\"nome :\" \" " + x.getValue().getNome() + "\""; 
		}
		return "";
	}

}
